#!/bin/bash

# Archivo de configuración global de Zsh
ZSHRC_GLOBAL=""

# Verificar si /etc/zshrc existe
if [ -f /etc/zshrc ]; then
    ZSHRC_GLOBAL="/etc/zshrc"
elif [ -f /etc/zsh/zshrc ]; then
    ZSHRC_GLOBAL="/etc/zsh/zshrc"
else
    echo "No se encontró el archivo de configuración global de Zsh."
    exit 1
fi

# Verificar si /usr/games ya está en el PATH
if grep -q "/usr/games" "$ZSHRC_GLOBAL"; then
    echo "La ruta /usr/games ya está presente en el archivo $ZSHRC_GLOBAL."
else
    # Agregar la ruta /usr/games al PATH
    echo 'export PATH=$PATH:/usr/games' | sudo tee -a "$ZSHRC_GLOBAL"
    echo "Ruta /usr/games agregada al archivo $ZSHRC_GLOBAL."
fi

# Recargar el archivo para aplicar los cambios
source "$ZSHRC_GLOBAL"
